{
  "kind": "collectionType",
  "collectionName": "suggestions",
  "info": {
    "singularName": "suggestion",
    "pluralName": "suggestions",
    "displayName": "suggestion"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "text"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "score": {
      "type": "decimal",
      "default": 0
    },
    "community": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::community.community",
      "inversedBy": "suggestions"
    },
    "upvotes": {
      "type": "integer"
    },
    "downvotes": {
      "type": "integer"
    }
  }
}
